<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0FFFFFF"
    android:alpha="0.95"
    android:elevation="8dp"
    android:padding="4dp"
    android:layout_margin="8dp">

    <!-- 画笔按钮 -->
    <ImageButton
        android:id="@+id/btnDraw"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="画笔"
        android:padding="6dp"
        android:layout_marginBottom="4dp" />

    <!-- 橡皮擦按钮 -->
    <ImageButton
        android:id="@+id/btnEraser"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="橡皮擦"
        android:padding="6dp"
        android:layout_marginBottom="4dp" />

    <!-- 当前颜色按钮（点击展开颜色选择） -->
    <View
        android:id="@+id/currentColorButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="#FF3B30"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- 颜色选择容器（默认隐藏） -->
    <LinearLayout
        android:id="@+id/colorPickerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <View
            android:id="@+id/colorRed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#FF3B30"
            android:layout_margin="1dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorBlue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#007AFF"
            android:layout_margin="1dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorGreen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#34C759"
            android:layout_margin="1dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/colorBlack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#000000"
            android:layout_margin="1dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 撤销按钮 -->
    <ImageButton
        android:id="@+id/btnUndo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="撤销"
        android:padding="6dp"
        android:layout_marginBottom="4dp" />

    <!-- 保存按钮 -->
    <ImageButton
        android:id="@+id/btnSaveDrawing"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_save"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="保存标注"
        android:padding="6dp" />

</LinearLayout>

